@model IEnumerable<MyExpenseTrackerEntity.Entities.User>

<h2>Kullanıcı Listesi</h2>

<a class="btn btn-primary mb-3" href="@Url.Action("Create")">+ Yeni Kullanıcı</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Email</th>
        <th>Rol</th>
        <th>İşlem</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.FirstName</td>
            <td>@u.LastName</td>
            <td>@u.Email</td>
            <td>@u.Role</td>
            <td>
                <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = u.Id })">Düzenle</a>
                <form asp-action="Delete" asp-route-id="@u.Id" method="post" style="display:inline;">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Silinsin mi?')">Sil</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>