@model MyExpenseTrackerEntity.Entities.Transaction

<h2>Yeni İşlem Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Kategori ID</label>
        <input asp-for="CategoryId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserId">Kullanıcı ID</label>
        <input asp-for="UserId" class="form-control" />
    </div>

    <button class="btn btn-success" type="submit">Kaydet</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">İptal</a>
</form>
