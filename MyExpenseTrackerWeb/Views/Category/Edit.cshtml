@model MyExpenseTrackerEntity.Entities.Category

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<h2>Kategori Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            <option value="1" selected="@((int)Model.Type == 1)">Gelir</option>
            <option value="2" selected="@((int)Model.Type == 2)">Gider</option>
        </select>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsDefault" class="form-check-input" />
        <label asp-for="IsDefault" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Geri</a>
</form>