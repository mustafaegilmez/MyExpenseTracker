@model MyExpenseTrackerEntity.DTOs.Category.CategoryCreateDto

@{
    ViewData["Title"] = "Kategori Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts & FontAwesome (isteğe bağlı) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-800">

    <div class="min-h-screen flex items-center justify-center px-4">
        <div class="bg-white p-8 rounded shadow-lg w-full max-w-md">
            <h2 class="text-2xl font-bold mb-6 text-center text-indigo-600">Kategori Ekle</h2>

            <form asp-action="Create" method="post" class="space-y-5">
                <!-- Kategori Adı -->
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <!-- Tür (Gelir / Gider) -->
                <div>
                    <label asp-for="Type" class="block text-sm font-medium text-gray-700"></label>
                    <select asp-for="Type" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 focus:ring-indigo-500 focus:border-indigo-500">
                        <option value="1">Gelir</option>
                        <option value="2">Gider</option>
                    </select>
                    <span asp-validation-for="Type" class="text-red-500 text-sm"></span>
                </div>

                <!-- Varsayılan mı? -->
                <div class="flex items-center">
                    <input asp-for="IsDefault" class="h-4 w-4 text-indigo-600 border-gray-300 rounded" />
                    <label asp-for="IsDefault" class="ml-2 block text-sm text-gray-700"></label>
                </div>

                <!-- Butonlar -->
                <div class="flex justify-between">
                    <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded">
                        Kaydet
                    </button>
                    <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded">
                        İptal
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- jQuery Validation Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
