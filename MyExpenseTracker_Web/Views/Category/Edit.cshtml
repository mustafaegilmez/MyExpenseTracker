@model MyExpenseTrackerEntity.DTOs.Category.CategoryUpdateDto

@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-bold mb-6 text-center text-indigo-600">Kategori Güncelle</h2>

    <form asp-action="Edit" method="post" class="space-y-5">
        <input type="hidden" asp-for="Id" />

        <!-- Ad -->
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Name" class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <!-- Tür -->
        <div>
            <label asp-for="Type" class="block text-sm font-medium text-gray-700"></label>
            <select asp-for="Type" class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                <option value="1">Gelir</option>
                <option value="2">Gider</option>
            </select>
            <span asp-validation-for="Type" class="text-red-500 text-sm"></span>
        </div>

        <!-- Varsayılan -->
        <div class="flex items-center">
            <input asp-for="IsDefault" class="h-4 w-4 text-indigo-600 border-gray-300 rounded" />
            <label asp-for="IsDefault" class="ml-2 block text-sm text-gray-700"></label>
        </div>

        <!-- Butonlar -->
        <div class="flex justify-between">
            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded">
                Güncelle
            </button>
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded">
                İptal
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
