@model MyExpenseTrackerEntity.DTOs.User.UserCreateDto
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <h2 class="text-2xl font-bold text-center text-indigo-600 mb-6">Kayıt Ol</h2>
        @if (TempData["RegisterSuccess"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                @TempData["RegisterSuccess"]
            </div>

            <script>
        setTimeout(function () {
            window.location.href = '/Account/Login';
        }, 3000); 
    </script>
        }


        <form asp-action="Register" method="post" class="space-y-4">
            <div>
                <label asp-for="FirstName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="FirstName" class="w-full border border-gray-300 rounded px-3 py-2 mt-1" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="LastName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="LastName" class="w-full border border-gray-300 rounded px-3 py-2 mt-1" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Email" class="w-full border border-gray-300 rounded px-3 py-2 mt-1" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Password" type="password" class="w-full border border-gray-300 rounded px-3 py-2 mt-1" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>
            <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded">
                Kayıt Ol
            </button>
            <p class="text-center text-sm mt-4">Zaten hesabınız var mı? <a href="/Account/Login" class="text-indigo-600 hover:underline">Giriş Yap</a></p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
