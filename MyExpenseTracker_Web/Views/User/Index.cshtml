@model List<MyExpenseTrackerEntity.DTOs.User.UserListDto>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<h2>Kullanıcılar</h2>

<a class="btn btn-primary mb-3" asp-action="Create">+ Yeni Kullanıcı</a>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Ad Soyad</th>
        <th>Email</th>
        <th>Rol</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName @user.LastName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@user.Id">Düzenle</a>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@user.Id" />
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Kullanıcıyı silmek istediğinize emin misiniz?')">Sil</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>